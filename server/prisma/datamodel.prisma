type Piece {
  id: ID! @id
  index: Int! @unique
  placed: Boolean! @default(value: false)
  connections: [Connection!]!
    @relation(name: "PieceConnections", onDelete: CASCADE)
}

type Connection {
  id: ID! @id
  index: Int!
  piece: Piece! @relation(name: "PieceConnections", onDelete: SET_NULL)
  male: Boolean!
  shift: Direction!
  inclination: Direction!
}

enum Direction {
  LEFT
  CENTER
  RIGHT
}
